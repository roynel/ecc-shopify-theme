<header class="header">
  <nav class="header-nav">
    <a href="/" class="logo">
      {% if section.settings.logo %}
        <img src="{{ section.settings.logo | image_url: width: 150 }}" alt="{{ shop.name }}">
      {% else %}
        <span>{{ shop.name }}</span>
      {% endif %}
    </a>
    <div class="nav-links">
      {% for link in linklists.main-menu.links %}
        <a href="{{ link.url }}" class="nav-link">{{ link.title }}</a>
      {% endfor %}
    </div>
    <div class="header-cta">
      <a href="/cart" class="button">Cart ({{ cart.item_count }})</a>
    </div>
  </nav>
</header>

{% schema %}
{
  "name": "Header",
  "settings": [
    {
      "type": "image_picker",
      "id": "logo",
      "label": "Logo"
    }
  ]
}
{% endschema %}
