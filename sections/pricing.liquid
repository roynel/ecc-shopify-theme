<div class="pricing">
  <h2 class="section-title">{{ section.settings.title }}</h2>
  <div class="pricing-cards">
    {% for block in section.blocks %}
      <div class="pricing-card">
        <h3>{{ block.settings.plan_name }}</h3>
        <p class="price">{{ block.settings.price | money }}</p>
        <ul class="features-list">
          {% for i in (1..3) %}
            {% assign feature_key = 'feature_' | append: i %}
            <li>{{ block.settings[feature_key] }}</li>
          {% endfor %}
        </ul>
        <a href="{{ block.settings.cta_url }}" class="button">{{ block.settings.cta_text }}</a>
      </div>
    {% endfor %}
  </div>
</div>

{% schema %}
{
  "name": "Pricing Plans",
  "settings": [
    {
      "type": "text",
      "id": "title",
      "label": "Section Title",
      "default": "Choose Your Plan"
    }
  ],
  "blocks": [
    {
      "type": "plan",
      "name": "Pricing Plan",
      "settings": [
        {
          "type": "text",
          "id": "plan_name",
          "label": "Plan Name",
          "default": "Starter"
        },
        {
          "type": "number",
          "id": "price",
          "label": "Price",
          "default": 29
        },
        {
          "type": "text",
          "id": "feature_1",
          "label": "Feature 1",
          "default": "Basic AI Tools"
        },
        {
          "type": "text",
          "id": "feature_2",
          "label": "Feature 2",
          "default": "5 Projects"
        },
        {
          "type": "text",
          "id": "feature_3",
          "label": "Feature 3",
          "default": "Community Support"
        },
        {
          "type": "text",
          "id": "cta_text",
          "label": "Button Text",
          "default": "Start Free Trial"
        },
        {
          "type": "url",
          "id": "cta_url",
          "label": "Button Link"
        }
      ]
    }
  ]
}
{% endschema %}
