<div class="features">
  {% for block in section.blocks %}
    <div class="feature-card">
      <div class="feature-icon">{{ block.settings.icon }}</div>
      <h3>{{ block.settings.title }}</h3>
      <p>{{ block.settings.description }}</p>
    </div>
  {% endfor %}
</div>

{% schema %}
{
  "name": "Features Grid",
  "blocks": [
    {
      "type": "feature",
      "name": "Feature",
      "settings": [
        {
          "type": "text",
          "id": "title",
          "label": "Title",
          "default": "AI-Powered Tools"
        },
        {
          "type": "textarea",
          "id": "description",
          "label": "Description",
          "default": "Harness the power of machine learning for your projects."
        },
        {
          "type": "text",
          "id": "icon",
          "label": "Icon (Emoji or SVG)",
          "default": "âœ¨"
        }
      ]
    }
  ],
  "presets": [{
    "name": "Features Grid",
    "category": "Custom"
  }]
}
{% endschema %}
