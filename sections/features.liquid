<div id="shopify-section-features" class="cc-product-card-grid">
  <div class="feature-container">
    <div class="feature-content">
      {% if section.settings.heading != blank %}
        <h2 class="feature-heading">{{ section.settings.heading }}</h2>
      {% endif %}
      
      {% if section.settings.text != blank %}
        <div class="feature-description">{{ section.settings.text }}</div>
      {% endif %}
      
      {% if section.settings.button_text != blank %}
        <a href="{{ section.settings.button_link }}" class="feature-button">
          {{ section.settings.button_text }}
        </a>
      {% endif %}
    </div>

    <div class="feature-products">
      {% assign collection = collections[section.settings.collection] %}
      {% if collection %}
        <div class="product-scroll-grid">
          {% for product in collection.products limit: 8 %}
            {% comment %} In sections/features.liquid {% endcomment %}
            <div class="product-card">
              <a href="{{ product.url }}">
                <img src="{{ product.featured_image | image_url: width: 400 }}"
                    alt="{{ product.title }}"
                    class="product-image"
                    loading="lazy">
              </a>
              <div class="product-info">
                <h3 class="product-title">{{ product.title }}</h3>
                
                {% comment %} Added description {% endcomment %}
                {% if product.description != blank %}
                  <div class="product-description">
                    {{ product.description | truncatewords: 15 }}
                    <a href="{{ product.url }}" class="read-more">Read more</a>
                  </div>
                {% endif %}
                
                <div class="product-price">
                  {{ product.price | money }}
                  {% if product.compare_at_price > product.price %}
                    <span class="compare-price">{{ product.compare_at_price | money }}</span>
                  {% endif %}
                </div>
                <button class="add-to-cart" data-product-id="{{ product.id }}">Add to Cart</button>
              </div>
            </div>
          {% endfor %}
        </div>
      {% endif %}
    </div>
  </div>
</div>

{% schema %}
{
  "name": "Featured Products",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "Featured Collection"
    },
    {
      "type": "richtext",
      "id": "text",
      "label": "Description",
      "default": "<p>Explore our curated collection of magical items</p>"
    },
    {
      "type": "text",
      "id": "button_text",
      "label": "Button Text",
      "default": "View All"
    },
    {
      "type": "url",
      "id": "button_link",
      "label": "Button Link"
    },
    {
      "type": "collection",
      "id": "collection",
      "label": "Select Collection"
    }
  ],
  "presets": [
    {
      "name": "Featured Products",
      "category": "Custom Sections"
    }
  ]
}
{% endschema %}